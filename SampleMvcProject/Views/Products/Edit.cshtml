@model SampleMvcproject.Application.DTOs.ProductDto

@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product Details</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id"></input>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class=" form-control"></input>
        <span asp-asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class=" form-control"></input>
        <span asp-asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class=" form-control"></input>
        <span asp-asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
